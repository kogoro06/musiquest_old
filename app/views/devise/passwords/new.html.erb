<div class="h-screen flex flex-col justify-center items-center text-center bg-customblue text-white">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-sm text-black">
    <!-- フォームタイトル -->
    <h2 class="text-2xl font-semibold mb-6">パスワード再発行</h2>

    <!-- パスワードリセットフォーム -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <!-- エラーメッセージ -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- メールアドレスフィールド -->
      <div class="mb-4 text-left text-black">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 rounded-md shadow-sm sm:text-sm" %>
      </div>

      <!-- 送信ボタン -->
      <div class="mt-4">
        <%= f.submit "案内を送信", class: "w-full bg-customred text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50" %>
      </div>
    <% end %>

    <!-- リンク -->
    <div class="mt-6 text-left">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
