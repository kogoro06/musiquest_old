<h1 class="text-3xl font-bold mb-6">診断結果</h1>
<h2 class="text-2xl font-semibold mb-4">アナタの声質は</h2>
<p class="text-xl text-blue-500 mb-6" id="voiceTypeResult"></p>
<p class="text-lg mb-6" id="voiceDescriptionResult"></p>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // sessionStorage から診断結果を取得
    const voiceType = sessionStorage.getItem("voiceType");
    const voiceTypeElement = document.getElementById("voiceTypeResult");
    const voiceDescriptionElement = document.getElementById("voiceDescriptionResult");

    if (voiceType) {
      voiceTypeElement.textContent = `${voiceType} です`;

      // 診断結果に基づく詳細説明
      let description;
      switch (voiceType) {
        case "高音エネルギータイプ":
          description = "あなたはピッチが高く、エネルギーが強く、トーンが明るい声質を持っています。";
          break;
        case "低音エネルギータイプ":
          description = "あなたはピッチが低く、エネルギーが強く、トーンが暗い声質を持っています。";
          break;
        case "高音ソフトタイプ":
          description = "あなたはピッチが高く、エネルギーが弱く、トーンが明るい声質を持っています。";
          break;
        case "低音ソフトタイプ":
          description = "あなたはピッチが低く、エネルギーが弱く、トーンが暗い声質を持っています。";
          break;
        case "高音ダークタイプ":
          description = "あなたはピッチが高く、エネルギーが強く、トーンが暗い声質を持っています。";
          break;
        case "低音ポジティブタイプ":
          description = "あなたはピッチが低く、エネルギーが弱く、トーンが明るい声質を持っています。";
          break;
        default:
          description = "診断結果が正しく取得できませんでした。再度診断をお試しください。";
      }

      voiceDescriptionElement.textContent = description;
    } else {
      voiceTypeElement.textContent = "診断結果がありません。再度診断をお試しください。";
    }
  });
</script>
